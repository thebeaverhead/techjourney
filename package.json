{
  "name": "techjourney",
  "version": "0.0.1",
  "description": "An interactive journey through the technology stack.",
  "main": "es/index.js",
  "private": true,
  "dependencies": {
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-watch": "^2.0.6",
    "babelify": "^7.3.0",
    "bootstrap": "^3.3.7",
    "classnames": "^2.1.3",
    "concurrently": "^3.1.0",
    "hammerjs": "^2.0.8",
    "jquery": "^3.1.1",
    "less": "^2.7.2",
    "less-plugin-clean-css": "^1.5.1",
    "less-watch-compiler": "^1.4.2",
    "material-components-web": "^0.23.0",
    "object-assign": "^4.1.1"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-plugin-react-transform": "^2.0.2",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-latest": "^6.16.0",
    "browserify": "^14.4.0",
    "browserify-shim": "^3.8.12",
    "bundle-collapser": "^1.2.1",
    "envify": "^4.0.0",
    "nodemon": "^1.11.0",
    "npm-run-all": "^4.0.2",
    "uglify-js": "^3.0.18",
    "uglify-js-es6": "^2.8.9",
    "uglifyify": "^4.0.1",
    "watchify": "^3.9.0"
  },
  "scripts": {
    "watch-css": "less-watch-compiler less ./webroot style.less",
    "build-css": "lessc --clean-css=\"--s1 --advanced --compatibility=ie8\" ./less/style.less ./webroot/style.css",
    "build-babel": "browserify ./es/index.js -v -t babelify -o ./webroot/bundle.js && babel ./webroot/bundle.js -v -o ./webroot/bundle-compiled.js --source-maps",
    "build-js": "browserify ./webroot/bundle-compiled.js -g [ envify --NODE_ENV production ] -g uglifyify -p bundle-collapser/plugin | uglifyjs --compress --mangle > ./webroot/bundle-compiled.min.js",
    "build-dev": "node_modules/.bin/watchify --poll=500 ./es/index.js -v -t babelify -o ./webroot/bundle.js",
    "build-prod": "npm-run-all -s build-css build-babel build-js",
    "start": "concurrently -k \"npm run build-dev\" \"npm run watch-css\""
  },
  "author": "The Beaverhead",
  "browserify": {
    "transform": [
      "envify"
    ]
  }
}
